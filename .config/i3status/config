general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "read_file weather"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "memory"
#order += "load"
order += "cpu_usage"
order += "volume master"
order += "tztime local"
order += "tztime Indiana"

read_file weather {
    path = "/home/rjframe/.cache/weather.txt"
    format = "%content"
    color_good = "#e0e0e0"
}

