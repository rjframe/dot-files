}

volume master {
    color_good = "#2222ff"
    format = "â™ª: %volume"
    format_muted = "â™ª: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%Y-%m-%d %H:%M"
    separator = false
}

tztime Indiana {
    format = "(@home %H:%M)"
    timezone = "America/Indiana/Indianapolis"
    hide_if_equals_localtime = true
}
